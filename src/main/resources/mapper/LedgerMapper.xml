<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybudget.mapper.LedgerMapper">

    <select id="findByUserId" resultType="com.example.mybudget.domain.LedgerEntry">
        SELECT *
          FROM LEDGER
         WHERE USER_ID = #{userId}
         ORDER BY date DESC
    </select>

    <insert id="insertLedgerEntry" parameterType="com.example.mybudget.domain.LedgerEntry" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO LEDGER (
                            USER_ID,
                            TYPE,
                            AMOUNT,
                            MEMO,
                            DATE,
                            CREATED_AT
        ) VALUES (
                  #{userId},
                  #{type},
                  #{amount},
                  #{memo},
                  #{date},
                  NOW()
                         )
    </insert>

</mapper>
